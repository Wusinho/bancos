<div class="p-2">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "mt-8 space-y-6") do |f| %>
  <div class="field">
    <%= f.label :email, class: "ml-3 text-sm font-bold text-gray-700 tracking-wide" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full text-base px-4 py-2 border-b border-gray-300 focus:outline-none rounded-2xl focus:border-teal-500" %>
  </div>

  <div class="field mt-8 content-center">
    <%= f.label :password, class:"ml-3 text-sm font-bold text-gray-700 tracking-wide" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full content-center text-base px-4 py-2 border-b rounded-2xl border-gray-300 focus:outline-none focus:border-teal-500" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center justify-between mt-8">
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: "sq-checkbox h-4 w-4 bg-blue-500 focus:ring-green-400 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
      </div>
      <div class="text-sm">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-teal-400 hover:text-green-500" %>
      </div>
    </div>
  <% end %>

  <div class="actions mt-8">
    <%= f.submit "Log in", class: "w-full flex justify-center bg-gradient-to-b from-teal-600 to-green-500  hover:bg-gradient-to-l hover:from-teal-600 hover:to-green-500 text-gray-100 p-4  rounded-full tracking-wide font-semibold  shadow-lg cursor-pointer transition ease-in duration-500" %>
  </div>
  <p class="flex flex-col items-center justify-center mt-10 text-center text-md text-gray-500">
    <span>Don't have an account?</span>
    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-teal-400 hover:text-green-500 no-underline hover:underline cursor-pointer transition ease-in duration-300" %>
    <% end %>
  </p>
<% end %>
</div>
